# Release Tracker - Private Cloud Deployment Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# Repository Configuration
# =============================================================================

# Git repository URL (HTTPS or SSH)
REPO_URL=https://github.com/user/release-tracker.git

# Branch to deploy (default: main)
REPO_BRANCH=main

# =============================================================================
# Application Configuration
# =============================================================================

# Application installation directory
APP_DIR=/opt/release-tracker/app

# System user that runs the application
APP_USER=releasetracker

# =============================================================================
# Backend Configuration
# =============================================================================

# Database connection string
# SQLite (default): sqlite+aiosqlite:///./release_tracker.db
# PostgreSQL: postgresql+asyncpg://user:pass@host:5432/dbname
DATABASE_URL=sqlite+aiosqlite:///./release_tracker.db

# JWT secret key for authentication
# Generate with: openssl rand -hex 32
SECRET_KEY=<generate-with-openssl-rand-hex-32>

# Google OAuth credentials
# Create at: https://console.cloud.google.com/apis/credentials
GOOGLE_CLIENT_ID=<your-oauth-client-id>
GOOGLE_CLIENT_SECRET=<your-oauth-client-secret>

# Debug mode (set to false for production)
DEBUG=false

# =============================================================================
# Frontend Configuration
# =============================================================================

# Google OAuth Client ID for frontend (same as backend GOOGLE_CLIENT_ID)
VITE_GOOGLE_CLIENT_ID=<your-oauth-client-id>

# =============================================================================
# Nginx Configuration (Optional)
# =============================================================================

# Server name for nginx config (defaults to _ for all hosts)
# Set to your domain name if using a custom domain
SERVER_NAME=_
